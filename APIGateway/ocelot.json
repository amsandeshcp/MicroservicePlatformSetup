{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:40000"
  },
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/Category/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 40001
        }
      ],
      "UpstreamPathTemplate": "/api/Gateway/Category/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post" ], //,
      "SwaggerKey": "category"
    },
    {
      "DownstreamPathTemplate": "/api/Product/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 40002
        }
      ],
      "UpstreamPathTemplate": "/api/Gateway/Product/{everything}",
      "UpstreamHttpMethod": [ "Get" ], //,
      "SwaggerKey": "Product"
    }
  ],
  "SwaggerEndPoints": [
    {
      "Key": "category",
      "Config": [
        {
          "Name": "category API",
          "Version": "v1",
          "Url": "http://localhost:40001/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "Product",
      "Config": [
        {
          "Name": "Product API",
          "Version": "v1",
          "Url": "http://localhost:40002/swagger/v1/swagger.json"
        }
      ]
    }
  ]
}